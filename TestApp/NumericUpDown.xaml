<UserControl x:Class="TestApp.NumericUpDown"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="115" d:DesignWidth="480" Width="438" Loaded="UserControl_Loaded">
    
    <Grid x:Name="LayoutRoot">
        <TextBlock Height="30" HorizontalAlignment="Left" Margin="12,12,0,0" Name="textBlock1" Text="TextBlock" VerticalAlignment="Top" />
        <Button Content="+" Height="72" HorizontalAlignment="Right" Margin="0,34,12,0" Name="button1" VerticalAlignment="Top" Width="72" Click="button1_Click" />
        <Button Content="-" HorizontalAlignment="Left" Margin="276,34,0,9" Name="button2" Width="72" Click="button2_Click" />
        <Border BorderThickness="3" Height="49" HorizontalAlignment="Left" Margin="12,45,0,0" Name="border1" VerticalAlignment="Top" Width="258" BorderBrush="White">
            <TextBlock Height="30" Name="textBlock2" Text="5" Width="210" />
        </Border>
    </Grid>
</UserControl>
